<%- include('header') -%>
<%- include('navbar') -%>
    <main role="main" class="container">
        <div class="row justify-content-center">
            
            <div class="col-lg-8 col-sm-12">
                <div class="row mb-1">
                    <div class="container">
                        <a class="btn btn-outline-success" role='button' href="/viselet/new">
                            <i class="fas fa-plus-circle"></i>
                            Új viselet hozzáadása
                        </a>
                    </div>
                </div>
                <div class="table-wrapper-scroll-y my-custom-scrollbar mb-2">
                    <table class="table table-striped table-hover table-condense">
                        <thead class="thead-dark">
                            <tr>
                                <th>Viselet</th>
                                <th >Kinél van</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% viseletLista.forEach(function(item){ %>
                            <tr class="clickable-row">
                            <td><%= item.name %></td>
                            <td><%= item._ownedBy.name %></td>
                            <td class="text-right">
                            <a class="btn btn-outline-success" role="button" href="/viselet/<%= item._id %>">
                            <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-outline-danger" role="button" href="/viselet/<%= item._id%>/del">
                             <i class="far fa-trash-alt"></i>
                            </button>  
                            </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <%- include('footer') -%>