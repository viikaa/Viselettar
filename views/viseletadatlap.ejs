<%- include('header') -%>
<%- include('navbar') -%>
    <main role="main" class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-8 col-sm-6">
                <form class="mb-3" name="viselet" method="POST"> 
                    <div class="form-group">
                        <label for="nev">Megnevezés</label>
                        <%if (typeof viselet !== "undefined"){%>
                            <input type="text" class="form-control" id="nev" name="name" value="<%= viselet.name %>" autofocus required>
                        <%}else{%>
                            <input type="text" class="form-control" id="nev" name="name" placeholder="Megnevezés" autofocus required
                        <%}%>
                    </div>
                    <div class="form-group">
                        <label for="tajegyseg">Tájegység</label>
                        <%if (typeof viselet !== "undefined"){%>
                            <input type="text" class="form-control" id="tajegység" name="region" value="<%= viselet.region %>" required>
                        <%}else{%>
                            <input type="text" class="form-control" id="tajegység" name="region" placeholder="Tájegység" required>
                        <%}%>
                    </div>
                    <div class="form-group">
                        <label for="szin">Szín/Minta</label>
                        <%if (typeof viselet !== "undefined"){%>
                            <input type="text" class="form-control" id="szin" name="color" value="<%= viselet.color %>" required>
                        <%}else{%>
                            <input type="text" class="form-control" id="szin" name="color" placeholder="Szín" required>
                        <%}%>
                    </div>
                    <div class="form-group">
                        <label for="kinelvan">Kinél van</label>
                        <select class="form-control" name='_ownedBy'>
                            <%if(typeof viselet !== "undefined"){%>
                                <% tancosLista.forEach(function(item){ %>
                                    <%if (viselet._ownedBy.equals(item._id)){%>
                                        <option value=<%=item._id%> selected><%=item.name%></option>
                                    <%}else{%>
                                    <option value=<%=item._id%>><%=item.name%></option>
                                <% }}); %>
                            <%}else{%>
                                <% tancosLista.forEach(function(item){ %>
                                    <option value=<%=item._id%>><%=item.name%></option>
                                <% }); %>
                            <%}%>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-outline-success" value="Mentés">
                </form>
            </div>
        </div>
    </main>
    <%- include('footer') -%>


    